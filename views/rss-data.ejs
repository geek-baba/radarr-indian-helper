<!DOCTYPE html>
<html lang="en" class="<%= typeof theme !== 'undefined' && theme === 'dark' ? 'dark' : '' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RSS Data — desiarr</title>
  <link rel="icon" type="image/svg+xml" href="/assets/desiarr-logo.svg">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/app.css">
  <style>
    @keyframes slideIn {
      from {
        transform: translateX(100%);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }
    @keyframes slideOut {
      from {
        transform: translateX(0);
        opacity: 1;
      }
      to {
        transform: translateX(100%);
        opacity: 0;
      }
    }
    .toast-enter {
      animation: slideIn 0.3s ease-out;
    }
    .toast-exit {
      animation: slideOut 0.3s ease-out;
    }
  </style>
</head>
<body class="bg-[var(--bg)] text-[var(--text)] min-h-screen">
  <!-- Toast Notification Container -->
  <div id="toastContainer" class="fixed top-4 right-4 z-50 space-y-2"></div>
  <%- include('partials/app-sidebar', { currentPage: 'rss' }) %>
  
  <div class="lg:pl-64">
    <%- include('partials/app-header', { currentSearch: '', hideRefresh: true, lastRefresh: typeof lastRefresh !== 'undefined' ? lastRefresh : null }) %>
    
    <main class="p-4 lg:p-6">
    <div class="mb-6">
      <div class="flex justify-between items-center mb-4">
        <div>
        <div class="flex items-center gap-4">
          <div class="text-right">
            <div class="text-sm text-gray-600 dark:text-gray-400">
              Total items: <span class="font-semibold"><%= totalItems %></span>
            </div>
          </div>
          <button 
            id="backfillButton"
            onclick="startBackfill()" 
            class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg flex items-center gap-2 transition-colors"
            title="Backfill missing TMDB/IMDB IDs for all existing items"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            <span>Backfill Missing IDs</span>
          </button>
          <button 
            id="syncButton"
            onclick="startSync()" 
            class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg flex items-center gap-2 transition-colors"
          >
            <svg id="syncIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            <span id="syncButtonText">Refresh RSS Feeds</span>
          </button>
        </div>
      </div>
      
      <!-- Progress Bar -->
      <div id="progressContainer" class="hidden bg-white rounded-lg shadow p-4 mb-4">
        <div class="flex items-center justify-between mb-2">
          <span id="progressStep" class="text-sm font-medium text-gray-700">Starting sync...</span>
          <span id="progressPercent" class="text-sm text-gray-600">0%</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2.5">
          <div id="progressBar" class="bg-blue-600 h-2.5 rounded-full transition-all duration-300" style="width: 0%"></div>
        </div>
        <div class="mt-2 text-xs text-gray-500">
          <span id="progressStats">Processing...</span>
        </div>
      </div>
    </div>

    <!-- Feed Summary Cards (Clickable Filters) -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <!-- All Feeds Card -->
      <div 
        onclick="window.location.href = '/data/rss'"
        class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 cursor-pointer transition-all duration-200 <%= !selectedFeedId && !selectedFeedType ? 'ring-2 ring-blue-500 shadow-lg' : 'hover:shadow-md hover:ring-1 hover:ring-gray-300 dark:hover:ring-gray-600' %>"
      >
        <h3 class="font-semibold mb-2 text-gray-900 dark:text-gray-100">All Feeds</h3>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          <div>Items: <span class="font-semibold"><%= totalItems %></span></div>
          <div>Last sync: <%= lastSync ? new Date(lastSync).toLocaleString() : 'Never' %></div>
        </div>
      </div>
      
      <!-- Movie Feeds Card -->
      <div 
        onclick="window.location.href = '/data/rss?feedType=movie'"
        class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 cursor-pointer transition-all duration-200 <%= selectedFeedType === 'movie' ? 'ring-2 ring-blue-500 shadow-lg' : 'hover:shadow-md hover:ring-1 hover:ring-gray-300 dark:hover:ring-gray-600' %>"
      >
        <div class="flex items-center justify-between mb-2">
          <h3 class="font-semibold text-gray-900 dark:text-gray-100">Movie Feeds</h3>
          <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">Movie</span>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          <div>Items: <span class="font-semibold"><%= itemsByFeed.filter(f => f.feedType === 'movie').reduce((sum, f) => sum + f.itemCount, 0) %></span></div>
          <div>Feeds: <span class="font-semibold"><%= itemsByFeed.filter(f => f.feedType === 'movie').length %></span></div>
        </div>
      </div>
      
      <!-- TVShow Feeds Card -->
      <div 
        onclick="window.location.href = '/data/rss?feedType=tv'"
        class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 cursor-pointer transition-all duration-200 <%= selectedFeedType === 'tv' ? 'ring-2 ring-blue-500 shadow-lg' : 'hover:shadow-md hover:ring-1 hover:ring-gray-300 dark:hover:ring-gray-600' %>"
      >
        <div class="flex items-center justify-between mb-2">
          <h3 class="font-semibold text-gray-900 dark:text-gray-100">TVShow Feeds</h3>
          <span class="px-2 py-1 text-xs rounded-full bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">TV</span>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          <div>Items: <span class="font-semibold"><%= itemsByFeed.filter(f => f.feedType === 'tv').reduce((sum, f) => sum + f.itemCount, 0) %></span></div>
          <div>Feeds: <span class="font-semibold"><%= itemsByFeed.filter(f => f.feedType === 'tv').length %></span></div>
        </div>
      </div>
      
      <!-- Individual Feed Cards -->
      <% itemsByFeed.forEach(feed => { %>
        <div 
          onclick="window.location.href = '/data/rss?feedId=<%= feed.feedId %>'"
          class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 cursor-pointer transition-all duration-200 <%= selectedFeedId === feed.feedId ? 'ring-2 ring-blue-500 shadow-lg' : 'hover:shadow-md hover:ring-1 hover:ring-gray-300 dark:hover:ring-gray-600' %>"
        >
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-semibold text-gray-900 dark:text-gray-100"><%= feed.feedName %></h3>
            <span class="px-2 py-1 text-xs rounded-full <%= feed.feedType === 'tv' ? 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200' : 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200' %>">
              <%= feed.feedType === 'tv' ? 'TV' : 'Movie' %>
            </span>
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">
            <div>Items: <span class="font-semibold"><%= feed.itemCount %></span></div>
            <div>Last sync: <%= new Date(feed.lastSync).toLocaleString() %></div>
          </div>
        </div>
      <% }); %>
    </div>


    <!-- Items Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Feed</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Type</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Title</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Year</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Size</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Published</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">TVDB ID</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">TMDB ID</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">IMDB ID</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Actions</th>
            </tr>
          </thead>
          <tbody id="itemsTableBody" class="bg-white divide-y divide-gray-200">
            <% items.forEach(item => { %>
              <tr class="item-row" data-title="<%= (item.title || '').toLowerCase() %>" data-feed="<%= (item.feed_name || '').toLowerCase() %>" data-year="<%= item.year || '' %>" data-tmdb="<%= item.tmdb_id || '' %>" data-imdb="<%= (item.imdb_id || '').toLowerCase() %>">
                <td class="px-4 py-3 text-sm"><%= item.feed_name %></td>
                <td class="px-4 py-3 text-sm">
                  <span class="px-2 py-1 text-xs rounded-full <%= (item.feed_type || 'movie') === 'tv' ? 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200' : 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200' %>">
                    <%= (item.feed_type || 'movie') === 'tv' ? 'TV' : 'Movie' %>
                  </span>
                </td>
                <td class="px-4 py-3 text-sm">
                  <a href="<%= item.link %>" target="_blank" class="text-blue-600 hover:underline">
                    <%= item.title %>
                  </a>
                </td>
                <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400"><%= item.year || '-' %></td>
                <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400">
                  <%= item.rss_size_mb ? item.rss_size_mb.toFixed(2) + ' MB' : '-' %>
                </td>
                <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400">
                  <%= new Date(item.published_at).toLocaleString() %>
                </td>
                <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400">
                  <div class="flex flex-col gap-1">
                    <% if (item.tvdb_id) { %>
                      <a href="https://www.thetvdb.com/series/<%= item.tvdb_id %>" target="_blank" class="text-blue-600 hover:underline">
                        <%= item.tvdb_id %>
                      </a>
                    <% } else { %>
                      <span>-</span>
                    <% } %>
                  </div>
                </td>
                <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400">
                  <div class="flex flex-col gap-1">
                    <% if (item.tmdb_id) { %>
                      <% if ((item.feed_type || 'movie') === 'tv') { %>
                        <a href="https://www.themoviedb.org/tv/<%= item.tmdb_id %>" target="_blank" class="text-blue-600 hover:underline">
                          <%= item.tmdb_id %>
                        </a>
                      <% } else { %>
                        <a href="https://www.themoviedb.org/movie/<%= item.tmdb_id %>" target="_blank" class="text-blue-600 hover:underline">
                          <%= item.tmdb_id %>
                        </a>
                      <% } %>
                    <% } else { %>
                      <span>-</span>
                    <% } %>
                    <button 
                      onclick="overrideTmdbId(<%= item.id %>)" 
                      class="bg-purple-500 hover:bg-purple-600 text-white px-2 py-1 rounded text-xs w-fit"
                      title="Override/Update TMDB ID (will persist)"
                    >
                      Override
                    </button>
                  </div>
                </td>
                <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400">
                  <div class="flex flex-col gap-1">
                    <% if (item.imdb_id) { %>
                      <a href="https://www.imdb.com/title/<%= item.imdb_id %>" target="_blank" class="text-blue-600 hover:underline">
                        <%= item.imdb_id %>
                      </a>
                    <% } else { %>
                      <span>-</span>
                    <% } %>
                    <button 
                      onclick="overrideImdbId(<%= item.id %>)" 
                      class="bg-indigo-500 hover:bg-indigo-600 text-white px-2 py-1 rounded text-xs w-fit"
                      title="Override/Update IMDB ID (will persist)"
                    >
                      Override
                    </button>
                  </div>
                </td>
                <td class="px-4 py-3 text-sm">
                  <button 
                    id="matchBtn<%= item.id %>"
                    onclick="matchItem(<%= item.id %>)" 
                    class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-xs"
                  >
                    Match
                  </button>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    </main>
  </div>

  <!-- Override TMDB ID Modal -->
  <div id="overrideTmdbModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 max-w-md w-full mx-4">
      <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Override TMDB ID</h3>
      <form id="overrideTmdbForm" onsubmit="submitOverrideTmdb(event)">
        <input type="hidden" id="overrideTmdbItemId" name="itemId">
        <div class="mb-4">
          <label for="tmdbIdInput" class="block text-sm font-medium mb-2 text-gray-700 dark:text-gray-300">TMDB ID:</label>
          <input 
            type="number" 
            id="tmdbIdInput" 
            name="tmdbId" 
            required 
            class="w-full border border-gray-300 dark:border-gray-600 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-purple-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
            placeholder="Enter TMDB ID"
          >
        </div>
        <div class="flex justify-end space-x-2">
          <button type="button" onclick="hideOverrideTmdbModal()" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
            Cancel
          </button>
          <button type="submit" class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Override IMDB ID Modal -->
  <div id="overrideImdbModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
      <h3 class="text-xl font-semibold mb-4">Override IMDB ID</h3>
      <form id="overrideImdbForm" onsubmit="submitOverrideImdb(event)">
        <input type="hidden" id="overrideImdbItemId" name="itemId">
        <div class="mb-4">
          <label for="imdbIdInput" class="block text-sm font-medium mb-2">IMDB ID:</label>
          <input 
            type="text" 
            id="imdbIdInput" 
            name="imdbId" 
            required 
            class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"
            placeholder="Enter IMDB ID (e.g., tt1234567)"
            pattern="^tt\d{7,}$"
          >
          <p class="text-xs text-gray-500 mt-1">Format: tt1234567</p>
        </div>
        <div class="flex justify-end space-x-2">
          <button type="button" onclick="hideOverrideImdbModal()" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
            Cancel
          </button>
          <button type="submit" class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    let progressInterval = null;

    // Search/Filter functionality - uses global search
    function filterTable() {
      const searchInput = document.getElementById('globalSearch');
      const searchTerm = (searchInput?.value || '').toLowerCase().trim();
      const rows = document.querySelectorAll('.item-row');
      
      if (!searchTerm) {
        rows.forEach(row => {
          row.style.display = '';
        });
        return;
      }
      
      rows.forEach(row => {
        const title = row.getAttribute('data-title') || '';
        const feed = row.getAttribute('data-feed') || '';
        const year = row.getAttribute('data-year') || '';
        const tmdb = row.getAttribute('data-tmdb') || '';
        const imdb = row.getAttribute('data-imdb') || '';
        
        const matches = 
          title.includes(searchTerm) ||
          feed.includes(searchTerm) ||
          year.toString().includes(searchTerm) ||
          tmdb.includes(searchTerm) ||
          imdb.includes(searchTerm);
        
        row.style.display = matches ? '' : 'none';
      });
    }

    // Expose filterTable to window for global search integration
    window.filterTable = filterTable;

    // Toast Notification System
    function startBackfill() {
      const button = document.getElementById('backfillButton');
      const progressContainer = document.getElementById('progressContainer');
      
      // Disable button and show loading state
      button.disabled = true;
      button.classList.add('opacity-50', 'cursor-not-allowed');
      progressContainer.classList.remove('hidden');
      
      // Start backfill
      fetch('/data/rss/backfill-ids', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          showToast('Backfill started successfully', 'success', 3000);
          // Start polling for progress
          progressInterval = setInterval(pollProgress, 1000);
        } else {
          showToast('Failed to start backfill: ' + (data.message || 'Unknown error'), 'error');
          button.disabled = false;
          button.classList.remove('opacity-50', 'cursor-not-allowed');
        }
      })
      .catch(error => {
        console.error('Error starting backfill:', error);
        showToast('Failed to start backfill: ' + error.message, 'error');
        button.disabled = false;
        button.classList.remove('opacity-50', 'cursor-not-allowed');
      });
    }

    let currentOverrideItemId = null;

    function overrideTmdbId(itemId) {
      currentOverrideItemId = itemId;
      document.getElementById('overrideTmdbItemId').value = itemId;
      document.getElementById('tmdbIdInput').value = '';
      document.getElementById('overrideTmdbModal').classList.remove('hidden');
      document.getElementById('tmdbIdInput').focus();
    }

    function hideOverrideTmdbModal() {
      document.getElementById('overrideTmdbModal').classList.add('hidden');
      currentOverrideItemId = null;
    }

    async function submitOverrideTmdb(event) {
      event.preventDefault();
      const itemId = document.getElementById('overrideTmdbItemId').value;
      const tmdbId = document.getElementById('tmdbIdInput').value;
      const button = event.target.querySelector('button[type="submit"]');
      const originalText = button.textContent;
      button.disabled = true;
      button.textContent = 'Saving...';

      const id = parseInt(tmdbId, 10);
      if (isNaN(id)) {
        showToast('Invalid TMDB ID', 'error');
        button.disabled = false;
        button.textContent = originalText;
        return;
      }

      try {
        const res = await fetch(`/data/rss/override-tmdb/${itemId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ tmdbId: id }),
        });
        const data = await res.json();
        if (data.success) {
          showToast(`TMDB ID updated to ${data.tmdbId} (${data.tmdbTitle || 'Unknown'})${data.imdbId ? ` - IMDB: ${data.imdbId}` : ''} - This will persist`, 'success');
          hideOverrideTmdbModal();
          setTimeout(() => window.location.reload(), 1000);
        } else {
          showToast('Error: ' + (data.error || 'Unknown error'), 'error');
          button.disabled = false;
          button.textContent = originalText;
        }
      } catch (error) {
        showToast('Error: ' + error.message, 'error');
        button.disabled = false;
        button.textContent = originalText;
      }
    }

    function overrideImdbId(itemId) {
      currentOverrideItemId = itemId;
      document.getElementById('overrideImdbItemId').value = itemId;
      document.getElementById('imdbIdInput').value = '';
      document.getElementById('overrideImdbModal').classList.remove('hidden');
      document.getElementById('imdbIdInput').focus();
    }

    function hideOverrideImdbModal() {
      document.getElementById('overrideImdbModal').classList.add('hidden');
      currentOverrideItemId = null;
    }

    async function submitOverrideImdb(event) {
      event.preventDefault();
      const itemId = document.getElementById('overrideImdbItemId').value;
      const imdbId = document.getElementById('imdbIdInput').value.trim();
      const button = event.target.querySelector('button[type="submit"]');
      const originalText = button.textContent;
      button.disabled = true;
      button.textContent = 'Saving...';

      if (!imdbId.match(/^tt\d{7,}$/)) {
        showToast('Invalid IMDB ID format. Must be like tt1234567', 'error');
        button.disabled = false;
        button.textContent = originalText;
        return;
      }

      try {
        const res = await fetch(`/data/rss/override-imdb/${itemId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ imdbId: imdbId }),
        });
        const data = await res.json();
        if (data.success) {
          showToast(`IMDB ID updated to ${data.imdbId}${data.tmdbTitle ? ` (${data.tmdbTitle})` : ''}${data.tmdbId ? ` - TMDB: ${data.tmdbId}` : ' - TMDB not found'} - This will persist`, 'success');
          hideOverrideImdbModal();
          setTimeout(() => window.location.reload(), 1000);
        } else {
          showToast('Error: ' + (data.error || 'Unknown error'), 'error');
          button.disabled = false;
          button.textContent = originalText;
        }
      } catch (error) {
        showToast('Error: ' + error.message, 'error');
        button.disabled = false;
        button.textContent = originalText;
      }
    }

    async function matchItem(itemId) {
      const button = document.getElementById(`matchBtn${itemId}`);
      const originalText = button.textContent;
      button.disabled = true;
      button.textContent = 'Matching...';
      
      try {
        const res = await fetch(`/data/rss/match/${itemId}`, {
          method: 'POST',
        });
        const data = await res.json();
        
        if (data.success) {
          showToast(`Match completed! TMDB: ${data.tmdbId || 'not found'}, IMDB: ${data.imdbId || 'not found'}`, 'success');
          // Reload page after 1 second to show updated IDs
          setTimeout(() => window.location.reload(), 1000);
        } else {
          showToast('Error: ' + (data.error || 'Unknown error'), 'error');
          button.disabled = false;
          button.textContent = originalText;
        }
      } catch (error) {
        showToast('Error: ' + error.message, 'error');
        button.disabled = false;
        button.textContent = originalText;
      }
    }

    function showToast(message, type = 'info', duration = 5000) {
      const container = document.getElementById('toastContainer');
      const toast = document.createElement('div');
      
      const bgColors = {
        success: 'bg-green-500',
        error: 'bg-red-500',
        warning: 'bg-yellow-500',
        info: 'bg-blue-500',
      };
      
      const icons = {
        success: '✓',
        error: '✗',
        warning: '⚠',
        info: 'ℹ',
      };
      
      toast.className = `${bgColors[type] || bgColors.info} text-white px-6 py-4 rounded-lg shadow-lg flex items-center space-x-3 min-w-[300px] max-w-md toast-enter`;
      toast.innerHTML = `
        <span class="text-xl font-bold">${icons[type] || icons.info}</span>
        <span class="flex-1">${message}</span>
      `;
      
      container.appendChild(toast);
      
      setTimeout(() => {
        toast.classList.remove('toast-enter');
        toast.classList.add('toast-exit');
        setTimeout(() => toast.remove(), 300);
      }, duration);
    }

    function startSync() {
      const button = document.getElementById('syncButton');
      const buttonText = document.getElementById('syncButtonText');
      const syncIcon = document.getElementById('syncIcon');
      const progressContainer = document.getElementById('progressContainer');
      
      // Disable button and show loading state
      button.disabled = true;
      button.classList.add('opacity-50', 'cursor-not-allowed');
      buttonText.textContent = 'Syncing...';
      syncIcon.classList.add('animate-spin');
      progressContainer.classList.remove('hidden');
      
      // Start sync
      fetch('/data/rss/sync', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          showToast('RSS sync started successfully', 'success', 3000);
          // Start polling for progress
          progressInterval = setInterval(pollProgress, 1000);
        } else {
          showToast('Failed to start sync: ' + (data.message || 'Unknown error'), 'error');
          resetButton();
        }
      })
      .catch(error => {
        console.error('Error starting sync:', error);
        showToast('Failed to start sync: ' + error.message, 'error');
        resetButton();
      });
    }

    function pollProgress() {
      fetch('/data/rss/sync/progress')
        .then(response => response.json())
        .then(data => {
          if (data.success && data.progress) {
            const progress = data.progress;
            const progressBar = document.getElementById('progressBar');
            const progressPercent = document.getElementById('progressPercent');
            const progressStep = document.getElementById('progressStep');
            const progressStats = document.getElementById('progressStats');
            
            // Update progress bar
            const percent = progress.progress || 0;
            progressBar.style.width = percent + '%';
            progressPercent.textContent = percent + '%';
            progressStep.textContent = progress.currentStep || 'Processing...';
            
            // Update stats
            if (progress.total > 0) {
              progressStats.textContent = `Processed: ${progress.processed || 0} / ${progress.total} feeds`;
              if (progress.errors > 0) {
                progressStats.textContent += ` | Errors: ${progress.errors}`;
              }
            }
            
            // Check if completed
            if (!progress.isRunning) {
              clearInterval(progressInterval);
              progressInterval = null;
              
              if (progress.errors > 0) {
                progressStep.textContent = 'Completed with errors';
                progressStep.classList.add('text-red-600');
                showToast(`Sync completed with ${progress.errors} error(s)`, 'warning', 5000);
              } else {
                progressStep.textContent = 'Sync completed successfully!';
                progressStep.classList.add('text-green-600');
                showToast('RSS sync completed successfully!', 'success', 3000);
              }
              
              // Reload page after 2 seconds to show updated data
              setTimeout(() => {
                window.location.reload();
              }, 2000);
            }
          }
        })
        .catch(error => {
          console.error('Error polling progress:', error);
        });
    }

    function resetButton() {
      const button = document.getElementById('syncButton');
      const buttonText = document.getElementById('syncButtonText');
      const syncIcon = document.getElementById('syncIcon');
      const progressContainer = document.getElementById('progressContainer');
      
      button.disabled = false;
      button.classList.remove('opacity-50', 'cursor-not-allowed');
      buttonText.textContent = 'Refresh RSS Feeds';
      syncIcon.classList.remove('animate-spin');
      
      if (progressInterval) {
        clearInterval(progressInterval);
        progressInterval = null;
      }
    }

    // Cleanup on page unload
    window.addEventListener('beforeunload', () => {
      if (progressInterval) {
        clearInterval(progressInterval);
      }
    });
  </script>
  <script src="/js/ui.js"></script>
</body>
