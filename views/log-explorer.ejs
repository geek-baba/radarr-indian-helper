<!DOCTYPE html>
<html lang="en" class="<%= typeof theme !== 'undefined' && theme === 'dark' ? 'dark' : '' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Logs — desiarr</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/app.css">
  <style>
    .log-level-DEBUG { color: #6b7280; }
    .log-level-INFO { color: #3b82f6; }
    .log-level-WARN { color: #f59e0b; }
    .log-level-ERROR { color: #ef4444; }
    .log-row:hover { background-color: #f3f4f6; }
    .dark .log-row:hover { background-color: #374151; }
    .detail-drawer {
      transition: transform 0.3s ease-in-out;
    }
    .detail-drawer.open {
      transform: translateX(0);
    }
    .detail-drawer.closed {
      transform: translateX(100%);
    }
    .json-viewer {
      font-family: 'Courier New', monospace;
      font-size: 0.875rem;
      white-space: pre-wrap;
      word-break: break-all;
    }
  </style>
</head>
<body class="bg-[var(--bg)] text-[var(--text)] min-h-screen">
  <%- include('partials/app-sidebar', { currentPage: 'logs' }) %>
  
  <div class="lg:pl-64">
    <%- include('partials/app-header') %>
    
    <main class="p-4 lg:p-6">
      <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Logs</h1>
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">View application logs and debug information</p>
      </div>

      <!-- Search and Filters Bar -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4 mb-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
          <!-- Text Search -->
          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Search</label>
            <input 
              type="text" 
              id="searchInput"
              placeholder="Search message, release title..."
              class="w-full border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
            />
          </div>

          <!-- Level Filter -->
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Level</label>
            <select id="levelFilter" class="w-full border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100">
              <option value="">All</option>
              <option value="DEBUG">DEBUG</option>
              <option value="INFO">INFO</option>
              <option value="WARN">WARN</option>
              <option value="ERROR">ERROR</option>
            </select>
          </div>

          <!-- Source Filter -->
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Source</label>
            <select id="sourceFilter" class="w-full border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100">
              <option value="">All</option>
              <option value="rss-sync">RSS Sync</option>
              <option value="radarr-sync">Radarr Sync</option>
              <option value="matching-engine">Matching Engine</option>
              <option value="tmdb">TMDB</option>
              <option value="imdb">IMDB</option>
              <option value="radarr-api">Radarr API</option>
              <option value="parser">Parser</option>
              <option value="scoring">Scoring</option>
              <option value="dashboard">Dashboard</option>
              <option value="api">API</option>
              <option value="system">System</option>
            </select>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
          <!-- Job ID Filter -->
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Job ID</label>
            <input 
              type="text" 
              id="jobIdFilter"
              placeholder="Filter by job ID..."
              class="w-full border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
            />
          </div>

          <!-- Date From -->
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Date From</label>
            <input 
              type="datetime-local" 
              id="dateFromFilter"
              class="w-full border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
            />
          </div>

          <!-- Date To -->
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Date To</label>
            <input 
              type="datetime-local" 
              id="dateToFilter"
              class="w-full border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
            />
          </div>
        </div>

        <!-- Error Only Checkbox -->
        <div class="mb-4">
          <label class="flex items-center">
            <input 
              type="checkbox" 
              id="errorOnlyFilter"
              class="rounded border-gray-300 dark:border-gray-600 text-blue-600 focus:ring-blue-500 bg-white dark:bg-gray-700"
            />
            <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Errors & Warnings Only</span>
          </label>
        </div>

        <!-- Active Filters Chips -->
        <div id="activeFilters" class="flex flex-wrap gap-2 mb-4"></div>

        <!-- Action Buttons -->
        <div class="flex justify-between items-center">
          <div class="flex gap-2">
            <button 
              onclick="applyFilters()" 
              class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium"
            >
              Apply Filters
            </button>
            <button 
              onclick="clearFilters()" 
              class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md text-sm font-medium"
            >
              Clear
            </button>
            <button 
              onclick="exportLogs()" 
              class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md text-sm font-medium"
            >
              Export
            </button>
          </div>
        </div>
      </div>

      <!-- Logs Table -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-700">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Timestamp</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Level</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Source</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Message</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Release/Job</th>
              </tr>
            </thead>
            <tbody id="logsTableBody" class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
              <!-- Logs will be loaded here -->
            </tbody>
          </table>
        </div>
        <div id="loadingIndicator" class="p-4 text-center text-gray-500 dark:text-gray-400 hidden">
          Loading logs...
        </div>
        <div id="noLogs" class="p-4 text-center text-gray-500 dark:text-gray-400 hidden">
          No logs found
        </div>
      </div>

      <!-- Pagination -->
      <div id="pagination" class="mt-4 flex justify-center items-center gap-2"></div>
    </main>
  </div>

  <!-- Detail Drawer -->
  <div id="detailDrawer" class="detail-drawer closed fixed right-0 top-0 h-full w-1/3 bg-white dark:bg-gray-800 shadow-2xl z-50 overflow-y-auto">
    <div class="p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white">Log Details</h2>
        <button onclick="closeDetailDrawer()" class="text-gray-500 hover:text-gray-700 dark:hover:text-gray-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div id="detailContent">
        <!-- Detail content will be loaded here -->
      </div>
    </div>
  </div>

  <!-- Overlay for drawer -->
  <div id="drawerOverlay" onclick="closeDetailDrawer()" class="hidden fixed inset-0 bg-black bg-opacity-50 z-40"></div>

  <script>
    let currentPage = 1;
    let currentFilters = {};

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      loadLogs();
    });

    // Load logs
    async function loadLogs(page = 1) {
      currentPage = page;
      document.getElementById('loadingIndicator').classList.remove('hidden');
      document.getElementById('noLogs').classList.add('hidden');
      document.getElementById('logsTableBody').innerHTML = '';

      const params = new URLSearchParams();
      params.append('page', page.toString());
      params.append('limit', '50');
      
      Object.entries(currentFilters).forEach(([key, value]) => {
        if (value) params.append(key, value);
      });

      try {
        const response = await fetch(`/api/logs?${params}`);
        const data = await response.json();

        if (data.success) {
          if (data.logs.length === 0) {
            document.getElementById('noLogs').classList.remove('hidden');
          } else {
            renderLogs(data.logs);
            renderPagination(data.pagination);
          }
        }
      } catch (error) {
        console.error('Error loading logs:', error);
      } finally {
        document.getElementById('loadingIndicator').classList.add('hidden');
      }
    }

    // Render logs
    function renderLogs(logs) {
      const tbody = document.getElementById('logsTableBody');
      tbody.innerHTML = '';
      
      logs.forEach(log => {
        const row = document.createElement('tr');
        row.className = 'log-row cursor-pointer';
        row.onclick = () => showLogDetail(log.id);
        
        const timestamp = new Date(log.timestamp).toLocaleString();
        const levelClass = `log-level-${log.level}`;
        const message = truncate(log.message, 80);
        const releaseOrJob = log.releaseTitle || (log.jobId ? `Job: ${log.jobId}` : '-');
        
        row.innerHTML = `
          <td class="px-4 py-3 text-sm text-gray-900 dark:text-gray-100">${timestamp}</td>
          <td class="px-4 py-3 text-sm ${levelClass} font-medium">${log.level}</td>
          <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400">${log.source}</td>
          <td class="px-4 py-3 text-sm text-gray-900 dark:text-gray-100">${message}</td>
          <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400">${truncate(releaseOrJob, 40)}</td>
        `;
        tbody.appendChild(row);
      });
    }

    // Render pagination
    function renderPagination(pagination) {
      const container = document.getElementById('pagination');
      if (!pagination || pagination.totalPages <= 1) {
        container.innerHTML = '';
        return;
      }

      let html = '';
      
      // Previous button
      html += `<button 
        onclick="loadLogs(${pagination.page - 1})" 
        ${pagination.page === 1 ? 'disabled' : ''}
        class="px-3 py-2 rounded-md border ${pagination.page === 1 ? 'bg-gray-100 dark:bg-gray-700 text-gray-400 cursor-not-allowed' : 'bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700'}">
        Previous
      </button>`;

      // Page numbers
      const maxPages = 10;
      let startPage = Math.max(1, pagination.page - Math.floor(maxPages / 2));
      let endPage = Math.min(pagination.totalPages, startPage + maxPages - 1);
      
      if (endPage - startPage < maxPages - 1) {
        startPage = Math.max(1, endPage - maxPages + 1);
      }

      if (startPage > 1) {
        html += `<button onclick="loadLogs(1)" class="px-3 py-2 rounded-md border bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">1</button>`;
        if (startPage > 2) {
          html += `<span class="px-2 text-gray-500">...</span>`;
        }
      }

      for (let i = startPage; i <= endPage; i++) {
        html += `<button 
          onclick="loadLogs(${i})" 
          class="px-3 py-2 rounded-md border ${i === pagination.page ? 'bg-blue-500 text-white' : 'bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700'}">
          ${i}
        </button>`;
      }

      if (endPage < pagination.totalPages) {
        if (endPage < pagination.totalPages - 1) {
          html += `<span class="px-2 text-gray-500">...</span>`;
        }
        html += `<button onclick="loadLogs(${pagination.totalPages})" class="px-3 py-2 rounded-md border bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">${pagination.totalPages}</button>`;
      }

      // Next button
      html += `<button 
        onclick="loadLogs(${pagination.page + 1})" 
        ${pagination.page >= pagination.totalPages ? 'disabled' : ''}
        class="px-3 py-2 rounded-md border ${pagination.page >= pagination.totalPages ? 'bg-gray-100 dark:bg-gray-700 text-gray-400 cursor-not-allowed' : 'bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700'}">
        Next
      </button>`;

      html += `<span class="ml-4 text-sm text-gray-600 dark:text-gray-400">Page ${pagination.page} of ${pagination.totalPages} (${pagination.total} total)</span>`;

      container.innerHTML = html;
    }

    // Show log detail
    async function showLogDetail(logId) {
      try {
        const response = await fetch(`/api/logs/${logId}`);
        const data = await response.json();
        
        if (data.success) {
          const log = data.log;
          const content = document.getElementById('detailContent');
          
          content.innerHTML = `
            <div class="space-y-4">
              <div>
                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Timestamp</label>
                <p class="text-sm text-gray-900 dark:text-gray-100">${new Date(log.timestamp).toLocaleString()}</p>
              </div>
              <div>
                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Level</label>
                <p class="text-sm ${getLevelClass(log.level)} font-medium">${log.level}</p>
              </div>
              <div>
                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Source</label>
                <p class="text-sm text-gray-900 dark:text-gray-100">${log.source}</p>
              </div>
              <div>
                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Message</label>
                <p class="text-sm text-gray-900 dark:text-gray-100 whitespace-pre-wrap">${escapeHtml(log.message)}</p>
              </div>
              ${log.releaseTitle ? `
              <div>
                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Release Title</label>
                <p class="text-sm text-gray-900 dark:text-gray-100">${escapeHtml(log.releaseTitle)}</p>
              </div>
              ` : ''}
              ${log.jobId ? `
              <div>
                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Job ID</label>
                <p class="text-sm text-gray-900 dark:text-gray-100">
                  <a href="#" onclick="event.preventDefault(); filterByJobId('${log.jobId}'); return false;" class="text-blue-600 dark:text-blue-400 hover:underline">${log.jobId}</a>
                </p>
              </div>
              ` : ''}
              ${log.details ? `
              <div>
                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Details</label>
                <pre class="json-viewer bg-gray-100 dark:bg-gray-700 p-3 rounded border border-gray-300 dark:border-gray-600 overflow-auto max-h-96 text-gray-900 dark:text-gray-100">${JSON.stringify(log.details, null, 2)}</pre>
                <button onclick="copyToClipboard(JSON.stringify(${JSON.stringify(log.details)}, null, 2))" class="mt-2 text-sm text-blue-600 dark:text-blue-400 hover:underline">Copy JSON</button>
              </div>
              ` : ''}
              ${log.errorStack ? `
              <div>
                <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Error Stack</label>
                <pre class="json-viewer bg-red-50 dark:bg-red-900/20 p-3 rounded border border-red-200 dark:border-red-800 overflow-auto max-h-96 text-red-800 dark:text-red-200">${escapeHtml(log.errorStack)}</pre>
                <button onclick="copyToClipboard(\`${escapeHtml(log.errorStack)}\`)" class="mt-2 text-sm text-blue-600 dark:text-blue-400 hover:underline">Copy Stack</button>
              </div>
              ` : ''}
            </div>
          `;
          
          document.getElementById('detailDrawer').classList.remove('closed');
          document.getElementById('detailDrawer').classList.add('open');
          document.getElementById('drawerOverlay').classList.remove('hidden');
        }
      } catch (error) {
        console.error('Error loading log detail:', error);
      }
    }

    // Close detail drawer
    function closeDetailDrawer() {
      document.getElementById('detailDrawer').classList.remove('open');
      document.getElementById('detailDrawer').classList.add('closed');
      document.getElementById('drawerOverlay').classList.add('hidden');
    }

    // Apply filters
    function applyFilters() {
      const dateFrom = document.getElementById('dateFromFilter').value;
      const dateTo = document.getElementById('dateToFilter').value;
      
      currentFilters = {
        search: document.getElementById('searchInput').value.trim() || undefined,
        level: document.getElementById('levelFilter').value || undefined,
        source: document.getElementById('sourceFilter').value || undefined,
        jobId: document.getElementById('jobIdFilter').value.trim() || undefined,
        dateFrom: dateFrom ? new Date(dateFrom).toISOString() : undefined,
        dateTo: dateTo ? new Date(dateTo).toISOString() : undefined,
        hasErrorOnly: document.getElementById('errorOnlyFilter').checked || undefined,
      };
      
      // Remove undefined values
      Object.keys(currentFilters).forEach(key => {
        if (currentFilters[key] === undefined) delete currentFilters[key];
      });
      
      updateActiveFilters();
      loadLogs(1);
    }

    // Clear filters
    function clearFilters() {
      document.getElementById('searchInput').value = '';
      document.getElementById('levelFilter').value = '';
      document.getElementById('sourceFilter').value = '';
      document.getElementById('jobIdFilter').value = '';
      document.getElementById('dateFromFilter').value = '';
      document.getElementById('dateToFilter').value = '';
      document.getElementById('errorOnlyFilter').checked = false;
      currentFilters = {};
      updateActiveFilters();
      loadLogs(1);
    }

    // Filter by job ID
    function filterByJobId(jobId) {
      document.getElementById('jobIdFilter').value = jobId;
      applyFilters();
      closeDetailDrawer();
    }

    // Update active filters display
    function updateActiveFilters() {
      const container = document.getElementById('activeFilters');
      container.innerHTML = '';
      
      Object.entries(currentFilters).forEach(([key, value]) => {
        if (value) {
          const chip = document.createElement('span');
          chip.className = 'inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200';
          chip.innerHTML = `${key}: ${value} <button onclick="removeFilter('${key}')" class="ml-2 text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-100">×</button>`;
          container.appendChild(chip);
        }
      });
    }

    // Remove filter
    function removeFilter(key) {
      delete currentFilters[key];
      if (key === 'search') document.getElementById('searchInput').value = '';
      if (key === 'level') document.getElementById('levelFilter').value = '';
      if (key === 'source') document.getElementById('sourceFilter').value = '';
      if (key === 'jobId') document.getElementById('jobIdFilter').value = '';
      if (key === 'dateFrom') document.getElementById('dateFromFilter').value = '';
      if (key === 'dateTo') document.getElementById('dateToFilter').value = '';
      if (key === 'hasErrorOnly') document.getElementById('errorOnlyFilter').checked = false;
      updateActiveFilters();
      loadLogs(1);
    }

    // Export logs
    async function exportLogs() {
      const format = confirm('Export as JSON? (Cancel for CSV)') ? 'json' : 'csv';
      
      try {
        const response = await fetch('/api/logs/export', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ format, filters: currentFilters }),
        });
        
        if (format === 'json') {
          const data = await response.json();
          const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
          const url = URL.createObjectURL(blob);
          const a = document.createElement('a');
          a.href = url;
          a.download = 'logs.json';
          a.click();
        } else {
          const text = await response.text();
          const blob = new Blob([text], { type: 'text/csv' });
          const url = URL.createObjectURL(blob);
          const a = document.createElement('a');
          a.href = url;
          a.download = 'logs.csv';
          a.click();
        }
      } catch (error) {
        console.error('Error exporting logs:', error);
        alert('Error exporting logs');
      }
    }

    // Helper functions
    function truncate(str, len) {
      if (!str) return '-';
      return str.length > len ? str.substring(0, len) + '...' : str;
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function getLevelClass(level) {
      return `log-level-${level}`;
    }

    function copyToClipboard(text) {
      navigator.clipboard.writeText(text).then(() => {
        alert('Copied to clipboard!');
      });
    }
  </script>
  <script src="/js/ui.js"></script>
</body>
</html>
